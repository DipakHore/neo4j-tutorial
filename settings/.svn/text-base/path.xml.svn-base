<?xml version="1.0" ?>

<project name="path" default="donothingToMakeAValidAntFile" basedir=".">

	<property name="target.build" value="target/artifacts" />
	<property name="main.src" value="src/main/java" />
	<property name="main.target" value="target/main/classes" />
	<property name="main.resources" value="src/main/resources" />
	<property name="test.src" value="src/test/java" />
	<property name="test.target" value="target/test/classes" />
	<property name="test.reports" value="target/test/reports" />
	<property name="test.resources" value="src/test/resources" />
	<property name="functionaltest.src" value="src/functionaltest/java" />
	<property name="functionaltest.target" value="target/functionaltest/classes" />
	<property name="functionaltest.reports" value="target/functionaltest/reports" />
	<property name="functionaltest.resources" value="src/functionaltest/resources" />
	<property name="performancetest.src" value="src/performancetest/java" />
	<property name="performancetest.target" value="target/performancetest/classes" />
	<property name="performancetest.reports" value="target/performancetest/reports" />
	<property name="performancetest.resources" value="src/performancetest/resources" />
	<property name="performanceharness.src" value="src/performanceharness/java" />
	<property name="performanceharness.target" value="target/performanceharness/classes" />
	<property name="performanceharness-unittest.src" value="src/performanceharness-unittest/java" />
	<property name="performanceharness-unittest.target" value="target/performanceharness-unittest/classes" />
	<property name="performanceharness-unittest.reports" value="target/performanceharness-unittest/reports" />
	<property name="performanceharness.resources" value="src/performanceharness/resources" />
	<property name="jmeter.outputdir" value="target/jmeter-output"/>
	
    <target name="donothingToMakeAValidAntFile"/>
	
	<path id="path.productionlibs">
		<fileset dir="lib/default" />
	</path>

	<path id="path.testing">
		<fileset dir="lib/test" />
		<path refid="path.productionlibs" />
		<dirset dir="${main.target}"/>
		<dirset dir="${test.target}"/>
	</path>
	
	<path id="path.functionaltesting">
		<path refid="path.productionlibs" />
		<path refid="path.testing" />
		<dirset dir="${functionaltest.target}"/>
	</path>

	<path id="path.performancetesting">
		<path refid="path.productionlibs" />
		<path refid="path.testing" />
		<dirset dir="${performancetest.target}"/>
	</path>
	
	<path id="path.performanceharness">
		<path refid="path.productionlibs" />
		<path refid="path.testing" />
		<dirset dir="${main.target}"/>
		<dirset dir="${performanceharness.target}"/>
	</path>
	
	<path id="path.performanceharness-unit">
		<path refid="path.performanceharness" />
		<dirset dir="${performanceharness-unittest.target}"/>
	</path>
	
</project>
